<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mapmory.services.product.dao.ProductImageDao">

    <!-- 이미지 파일 추가 -->
    <insert id="addProductImage" parameterType="com.mapmory.services.product.domain.ProductImage">
   	 	INSERT INTO IMAGE_FILE (UUID, PRODUCT_NO, IMAGE_NAME)
   	 	VALUES (#{uuid}, #{productNo}, #{imageFile})
	</insert>

    
    <!-- 상품 번호에 해당하는 이미지 파일 리스트 조회 -->
    <select id="getProductImageList" parameterType="int" resultType="com.mapmory.services.product.domain.ProductImage">
        SELECT * FROM IMAGE_FILE WHERE PRODUCT_NO = #{productNo}
    </select>
    
    <!-- 상품 번호에 해당하는 이미지 파일 삭제 -->
    <delete id="deleteProductImage" parameterType="int">
        DELETE FROM IMAGE_FILE WHERE PRODUCT_NO = #{productNo}
    </delete>

</mapper>
