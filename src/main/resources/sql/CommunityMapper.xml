			<result property="targetUserId"		column="target_user_id"		jdbcType="VARCHAR"/>
			<result property="recordNo"			column="record_no"			jdbcType="INTEGER"/>
			<result property="replyNo"			column="reply_no"			jdbcType="INTEGER"/>
